# EditorConfig: https://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[{CMakeLists.txt,*.cmake}]
indent_size = 2

[*.yml]
indent_size = 2

[*.md]
indent_size = 2
max_line_length = off
trim_trailing_whitespace = false
